{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "preLaunchTask": "CMake: build",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                // Add arguments to the example here
                // "-h",
                "-f",
                "~/file",
                "-L",
                "inputArg",
                "outputArg",
                "-l",
                "-s",
                "150",
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "environment": [],
            "MIMode": "gdb",
        }
    ]
}